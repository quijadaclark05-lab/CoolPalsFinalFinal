<Window x:Class="ValorantLoginApp.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up" Height="500" Width="420"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundDarkBrush}">
    <Grid Margin="22">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Create Account" 
                   FontSize="26" FontWeight="Bold"
                   Foreground="{StaticResource AccentRedBrush}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,16"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Username" Foreground="{StaticResource ForegroundBrush}"/>
            <TextBox x:Name="UsernameTextBox" Height="30" Background="#1F1F1F" Foreground="{StaticResource ForegroundBrush}" BorderBrush="{StaticResource AccentRedBrush}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Password" Foreground="{StaticResource ForegroundBrush}"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Background="#1F1F1F" Foreground="{StaticResource ForegroundBrush}" BorderBrush="{StaticResource AccentRedBrush}"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Confirm Password" Foreground="{StaticResource ForegroundBrush}"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Height="30" Background="#1F1F1F" Foreground="{StaticResource ForegroundBrush}" BorderBrush="{StaticResource AccentRedBrush}"/>
        </StackPanel>

        <StackPanel Grid.Row="4" VerticalAlignment="Top">
            <Button Content="Register" Click="RegisterButton_Click" Background="{StaticResource AccentRedBrush}" Foreground="White" Padding="10" Margin="0,0,0,8"/>
            <Button Content="Back to Login" Click="BackButton_Click" Background="Transparent" Foreground="{StaticResource AccentRedBrush}" BorderBrush="{StaticResource AccentRedBrush}" Padding="8"/>
        </StackPanel>
    </Grid>
</Window>
