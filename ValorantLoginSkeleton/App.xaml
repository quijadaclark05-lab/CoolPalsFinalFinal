<Application x:Class="ValorantLoginApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <!-- Valorant-style theme resources (customize with your Figma values) -->
        <Color x:Key="AccentRedColor">#FF4655</Color>
        <SolidColorBrush x:Key="AccentRedBrush" Color="{StaticResource AccentRedColor}" />
        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="#121212" />
        <SolidColorBrush x:Key="ForegroundBrush" Color="White" />
    </Application.Resources>
</Application>
